# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/photo_gallery_dev
TEST_DATABASE_URL=postgresql://username:password@localhost/photo_gallery_test

# Application Settings
APP_NAME=Photo Gallery
APP_ENV=development  # development, testing, production
DEBUG=true
LOG_LEVEL=debug  # debug, info, warning, error, critical
SECRET_KEY=change_this_to_a_secure_random_string
ALLOWED_HOSTS=localhost,127.0.0.1

# File Storage
STORAGE_BASE_PATH=./data
MAX_UPLOAD_SIZE=20971520  # 20MB in bytes

# InvokeAI Integration
INVOKEAI_LOCAL_URL=http://localhost:9090
INVOKEAI_REMOTE_URL=
INVOKEAI_CONNECTION_TIMEOUT=10
INVOKEAI_READ_TIMEOUT=30

# RunPod Configuration (for remote InvokeAI)
RUNPOD_API_KEY=
RUNPOD_POD_TYPE=NVIDIA A5000
RUNPOD_IDLE_TIMEOUT=30  # minutes

# Image Generation Settings
MAX_BATCH_SIZE=10
RETRIEVAL_MAX_ATTEMPTS=5
RETRIEVAL_RETRY_DELAY=60  # seconds

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000